extends:
  - eslint-config-airbnb
  - prettier
  - prettier/react
  - eslint-config-prettier

plugins:
  - prettier
  - import
  - jsx-a11y
  - react

parser:
  babel-eslint

settings:
  ecmascript: 6

env:
  browser: true

rules:
  arrow-body-style: 0
  func-style: 0
  func-names: 0
  comma-dangle: 0
  no-console: 0
  no-param-reassign: 0
  linebreak-style: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0
  import/extensions: 0
  react/jsx-filename-extension: 0
  import/prefer-default-export: 0
  import/no-named-as-default: 0
  import/no-commonjs: 2
  space-return-throw-case: 0
  object-shorthand: 0
  complexity: 0
  strict: [2, "never"]
  react/prop-types: 0
  react/button-has-type: 0
  react/prefer-stateless-function: 0
  jsx-a11y/img-has-alt: 0
  jsx-a11y/label-has-associated-control: 0
  jsx-a11y/label-has-for: 0
  prettier/prettier: ["error", {"trailingComma": "all", "singleQuote": true, "semi": false, "printWidth": 180 }]
